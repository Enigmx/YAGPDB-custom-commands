{{/* forum log modals */}}
{{/* configuration */}}
{{$deleteNotificationChannel := 1}}
{{/* end configuration */}}

{{if eq $deleteNotificationChannel 1}}
{{range .Guild.Threads}}
{{if and (bitwiseAnd .Flags 2) (eq  (getChannelOrThread (reFind `\d+` $.Message.Content)).ParentID .ParentID)}}
{{$deleteNotificationChannel = .ID}}
{{break}}
{{end}}
{{end}}
{{end}}
{{$c := cslice}}
{{range $.Message.Components}}
{{$c = $c.Append .Components}}
{{end}}
{{if eq .StrippedID "RenamePost"}}
{{if eq (len (index .Values 0)) 0}}
{{return}}
{{end}}
{{if not (getChannelOrThread (reFind `\d+` .Message.Content))}}
Seems like this channel doesn't exist anymore...
{{deleteResponse 5}}
{{ephemeralResponse}}
{{return}}
{{end}}
{{editChannelName (toInt (reFind `\d+` .Message.Content)) (index .Values 0) }}
{{$embed1 := structToSdict (index .Message.Embeds 0)}}
{{$embed1.Set "title" (index .Values 0)}}
{{try}}
{{updateMessage (complexMessageEdit "content" ( print .Message.Content "\n\n" .User.Mention " Has changed the name of the post:\n" (index .Values 0)) "components" $c "embed" $embed1)}}
{{catch}}
{{editMessage nil .Message.ID (complexMessageEdit "content" ( print .Message.Content "\n\n" .User.Mention " Has changed the name of the post:\n" (index .Values 0)) "components" $c "embed" $embed1)}}
{{end}}
{{return}}
{{end}}
{{if eq .StrippedID "ErasePostLog"}}
{{try}}
{{updateMessage (complexMessageEdit "content" (print .Message.Content "\n\n" .User.Mention " has erased this post.") "components" $c "embed" (cslice (index .Message.Embeds 0)))}}
{{catch}}
{{editMessage nil .Message.ID (complexMessageEdit "content" (print .Message.Content "\n\n" .User.Mention " has erased this post.") "componen" $c "embed" (cslice (index .Message.Embeds 0)))}}
{{end}}
{{deleteForumPost (reFind `\d+` .Message.Content)}}
{{if not (eq (len (index .Values 0)) 0)}}
{{$user := getMember (index (reFindAll `\d+` .Message.Content) 1)}}
{{if not $user}}
{{editMessage nil .Message.ID (complexMessageEdit "content" (print .Message.Content "\n\n" .User.Mention " has erased this post for the following reason:\n" (index .Values 0)) "components" $c "embed" (cslice (index .Message.Embeds 0)))}}
{{return}}
{{end}}
{{$deleteNotificationChannel}}
{{sendMessage $deleteNotificationChannel (complexMessage "content" (print "<@" $user.User.ID ">") "embed" (cembed "color" 0xff0000 "title" "‚ùó A  moderator deleted your post" "description" (print "**__Reason:__**\n" (index $.Values 0))))}}
{{editMessage nil .Message.ID (complexMessageEdit "content" (print .Message.Content "\n\n" .User.Mention " has erased this post for the following reason:\n" (index .Values 0)) "components" $c "embed" (cslice (index .Message.Embeds 0)))}}
{{return}}
{{end}}
{{return}}
{{end}}
