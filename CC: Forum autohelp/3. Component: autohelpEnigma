{{/* autohelp buttons */}}
{{$autohelpAdmin := 0}}

{{if eq .StrippedID "EraseAutoMessage"}}
{{if not (in .Member.Roles $autohelpAdmin)}}
{{sendResponse nil (complexMessage "content" "Only administrators of the bot can configure the automatic messages :(" "ephemeral" true)}}
{{return}}
{{end}}
{{$db := (dbGet 0 "autohelpEnigma").Value}}
{{$id := toInt (reFind `\d+` (index .Message.Embeds 0).Title)}}
{{if not ($db.Get (toInt64 $id))}}
Seems like this automatic message has been erased already...
{{return}}
{{end}}
{{sendModal (sdict "title" "Erase automatic message" "custom_id" "autohelpEnigmaEraseAutoMessage" "fields" (cslice (sdict "label" "Type ''confirm'' to erase:" "placeholder" "confirm" "required" true "style" 1 "max_length" 10)))}}
{{end}}
{{if eq .StrippedID "EditAutoMessage"}}
{{if not (in .Member.Roles $autohelpAdmin)}}
{{sendResponse nil (complexMessage "content" "Only administrators of the bot can configure the automatic messages :(" "ephemeral" true)}}
{{return}}
{{end}}
{{$db := (dbGet 0 "autohelpEnigma").Value}}
{{$id := toInt (reFind `\d+` (index .Message.Embeds 0).Title)}}
{{if not ($db.Get (toInt64 $id))}}
Seems like this automatic message has been erased already...
{{return}}
{{end}}
{{sendModal (sdict "title" "Edit automatic help" "custom_id" "autohelpEnigmaEditAutoMessage" "fields" (cslice (sdict "label" "Keywords" "value" (joinStr "/" (index ($db.Get (toInt64 $id)) 0)) "placeholder" "split your keywords using ''/''." "required" true "style" 1 "max_length" 1900) (sdict "label" "Automatic message" "value" (index ($db.Get (toInt64 $id)) 1) "placeholder" "This will be sent if there is a match" "required" true "style" 2 "max_length" 3900) (sdict "label" "Optional attachment" "placeholder" "https://media.discordapp.net/attachments/..." "value" (index ($db.Get (toInt64 $id)) 2)  "style" 1 "max_length" 900)))}}
{{return}}
{{end}}
{{if eq .StrippedID "CreateAutoMessage"}}
{{if not (in .Member.Roles $autohelpAdmin)}}
{{sendResponse nil (complexMessage "content" "Only administrators of the bot can configure the automatic messages :(" "ephemeral" true)}}
{{return}}
{{end}}
{{sendModal (sdict "title" "Create automatic help" "custom_id" "autohelpEnigmaCreateAutoMessage" "fields" (cslice (sdict "label" "Keywords" "placeholder" "split your keywords using ''/''." "required" true "style" 1 "max_length" 1900) (sdict "label" "Automatic message" "placeholder" "This will be sent if there is a match" "required" true "style" 2 "max_length" 3900) (sdict "label" "Optional attachment" "placeholder" "https://media.discordapp.net/attachments/..." "style" 1 "max_length" 900)))}}
{{return}}
{{end}}
